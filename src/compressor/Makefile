COMPRESSORS = CCC BDI FPC CPACK

CCCMODULES_SRCDIR = CCCmodules
CCCMODULES_SRCS = $(wildcard $(CCCMODULES_SRCDIR)/*.cpp)
CCCMODULES_OBJS = $(CCCMODULES_SRCS:$(CCCMODULES_SRCDIR)/%.cpp=$(OBJDIR)/%.o)

all : $(COMPRESSORS)

BDI : 
	@$(CC) $(CFLAGS) -c -o $(OBJDIR)/BDI.o BDI.cpp $(LDFLAGS)

FPC :
	@$(CC) $(CFLAGS) -c -o $(OBJDIR)/FPC.o FPC.cpp $(LDFLAGS)

CPACK :
	@$(CC) $(CFLAGS) -c -o $(OBJDIR)/CPACK.o CPACK.cpp $(LDFLAGS)

CCC : $(CCCMODULES_OBJS)
	@$(CC) $(CFLAGS) -c -o $(OBJDIR)/CCC.o CCC.cpp $(LDFLAGS)

$(CCCMODULES_OBJS) : $(OBJDIR)/%.o : $(CCCMODULES_SRCDIR)/%.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

